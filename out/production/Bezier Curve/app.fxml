<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<AnchorPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appController" style="-fx-background-color: #232323">

    <VBox spacing="5" prefHeight="500.0" prefWidth="900.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <BorderPane fx:id="scenePane" prefWidth="900" prefHeight="450" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        <HBox alignment="CENTER" spacing="5">
            <Label text="Current Point: " textFill="white"/>
            <Slider prefHeight="30" prefWidth="120" fx:id="currentPointSlider" max="2"/>
            <Label text="Smoothness: " textFill="white"/>
            <Slider prefHeight="30" prefWidth="120" fx:id="smoothnessSlider" min="2" max="200"/>
            <Button styleClass="add" stylesheets="appCss.css" onAction="#addNode"/>
            <Button fx:id="minus" styleClass="minus" stylesheets="appCss.css" onAction="#removeNode" disable="true"/>
            <CheckBox text="Hide Guides" textFill="#ffffff" onAction="#toggleGuides"/>
        </HBox>
    </VBox>

</AnchorPane>
